<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <DatePicker

        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="395dp"
        android:layout_marginTop="8dp"
        android:calendarTextColor="@android:color/black"
        android:datePickerMode="calendar"
        android:headerBackground="#d6888888"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:calendarViewShown="false"/>

    <Button
        android:id="@+id/bt_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="簽到"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datePicker" />

    <Button
        android:id="@+id/bt_testingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="傳送簽到通知"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/bt_sign"
        app:layout_constraintStart_toEndOf="@+id/bt_sign"
        app:layout_constraintTop_toTopOf="@+id/bt_sign"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>