<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff5ed"
    tools:context="com.example.user.limger.Aboutus_Activity">

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="設計團隊"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ab_imgKyle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginTop="4dp"
        android:foregroundGravity="center"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="@+id/textView37"
        app:layout_constraintTop_toBottomOf="@+id/textView37"
        app:srcCompat="@android:drawable/list_selector_background" />

    <TextView
        android:id="@+id/txtKyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="12dp"
        android:layout_row="1"
        android:foregroundGravity="center"
        android:text="陳彥凱-Kyle\n朝陽科技大學 資訊管理系\n負責網頁製作及系統管理"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ab_imgKyle"
        app:layout_constraintTop_toTopOf="@+id/ab_imgKyle" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ab_imgRyan"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginTop="8dp"
        android:foregroundGravity="center"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="@+id/ab_imgKyle"
        app:layout_constraintTop_toBottomOf="@+id/ab_imgKyle"
        app:srcCompat="@android:drawable/list_selector_background" />

    <TextView
        android:id="@+id/txtRyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_row="1"
        android:foregroundGravity="center"
        android:text="黃子誠-Ryan\n朝陽科技大學 資訊管理系\n負責網頁製作及系統管理"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ab_imgRyan"
        app:layout_constraintTop_toTopOf="@+id/ab_imgRyan" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ab_imgKevin"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginTop="8dp"
        android:foregroundGravity="center"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="@+id/ab_imgRyan"
        app:layout_constraintTop_toBottomOf="@+id/ab_imgRyan"
        app:srcCompat="@android:drawable/list_selector_background" />

    <TextView
        android:id="@+id/txtKevin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_row="1"
        android:foregroundGravity="center"
        android:text="賴哲彥-Kevin\n朝陽科技大學 資訊管理系\n負責APP製作及系統管理"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ab_imgKevin"
        app:layout_constraintTop_toTopOf="@+id/ab_imgKevin" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ab_imgKiarrianna"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginTop="8dp"
        android:foregroundGravity="center"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="@+id/ab_imgKevin"
        app:layout_constraintTop_toBottomOf="@+id/ab_imgKevin"
        app:srcCompat="@android:drawable/list_selector_background" />

    <TextView
        android:id="@+id/txtKiarrianna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_row="1"
        android:foregroundGravity="center"
        android:text="李昱蓁-Kiarrianna\n朝陽科技大學 資訊管理系\n負責書面製作及系統管理"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ab_imgKiarrianna"
        app:layout_constraintTop_toTopOf="@+id/ab_imgKiarrianna" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="指導老師"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/ab_imgKiarrianna"
        app:layout_constraintTop_toBottomOf="@+id/ab_imgKiarrianna" />

    <TextView
        android:id="@+id/txtTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_row="1"
        android:foregroundGravity="center"
        android:text="鄭秀華教授\n朝陽科技大學 資訊管理系"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ab_imgTeacher"
        app:layout_constraintTop_toTopOf="@+id/ab_imgTeacher" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ab_imgTeacher"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginTop="4dp"
        android:foregroundGravity="center"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@android:drawable/list_selector_background" />

</android.support.constraint.ConstraintLayout>
